{
  "name": "rfid-laundry-frontend",
  "version": "1.0.0",
  "description": "RFID Çamaşırhane Takip Sistemi",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "main": "electron/main.cjs",
  "author": "RFID Laundry",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3002 && electron .\"",
    "electron:dev:packager": "concurrently \"npm run dev\" \"wait-on http://localhost:3002 && electron . --packager\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:win:packager": "npm run build && electron-builder --win -c electron-builder-packager.json",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.rfid.laundry",
    "productName": "RFID Çamaşırhane",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RFID Çamaşırhane"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/pwa-512x512.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/pwa-512x512.png"
    }
  },
  "dependencies": {
    "@tanstack/react-query": "^5.17.9",
    "@types/leaflet": "^1.9.21",
    "axios": "^1.6.2",
    "date-fns": "^3.0.6",
    "jsbarcode": "^3.12.1",
    "jspdf": "^3.0.4",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.303.0",
    "print-js": "^1.6.0",
    "qrcode": "^1.5.4",
    "qrcode.react": "^4.2.0",
    "qz-tray": "^2.1.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.21.1",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "electron": "39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^1.6.0",
    "wait-on": "^9.0.3",
    "workbox-window": "^7.4.0"
  }
}
